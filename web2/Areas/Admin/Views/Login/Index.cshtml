@model web2.Models.Tb_User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 2 | Log in</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link rel="stylesheet" href="~/Assets/Admin/bootstrap/css/bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Assets/Admin/dist/css/AdminLTE.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href=""><b>Admin</b>LTE</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Dang nhap de vao quan tri he thong</p>
            @*<form action="" method="post">*@
            @using (Html.BeginForm())
            {
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
                <div class="form-group has-feedback">
                    @*<input type="email" class="form-control" placeholder="Email">*@
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", @placeholder = "Nhap tai khoan" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <div>
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group has-feedback">
                    @*<input type="password" class="form-control" placeholder="Password">*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Nhap mat khau" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Đăng Nhập</button>
                    </div><!-- /.col -->
                </div>
            }
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="~/Assets/Admin/bootstrap/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Assets/Admin/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>

